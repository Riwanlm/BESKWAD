{% extends 'base.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row col-12 text-center offset-5">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn">{{ button_label|default('Filtrer') }}</button>
            {{ form_end(form) }}
        </div>
        <a href="{{ path('evenement_index') }}">Voir la liste complète</a>

        <h1 class="text-center mt-2">Liste des événements</h1>

        <div class="row">
            {% for evenement in evenements  %}
                <article class="col-4">
                    {% include 'evenement/_thumbnail.html.twig'%}
                </article>
            {% endfor %}
        </div>
        <div class="navigation col-12 offset-4 mb-5">
            {{ knp_pagination_render(evenements) }}
        </div>


    </div>

{% endblock %}
